.layout {
  position: relative;
  background-color: #f5f7f9;
  z-index: 100;
  .layout-top {
    height: 40px;
    background-color: #48abff;
    .layout-left {
      display: inline-block;
      overflow: auto;
      vertical-align: middle;
      color: #fff;
      line-height: 38px;
      padding: 0 20px;
      font-family: "KaiTi";
      font-size: 18px;
      font-weight: bold;
      text-shadow: 1px 1px 0 rgba(255,255,255,0.2);
    }
  }
  .layout-bottom {
    position: absolute;
    top: 40px;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    .layout-content {
      position: absolute;
      top: 4px;
      left: 4px;
      right: 4px;
      bottom: 4px;
      margin: auto;
      overflow: auto;
      background-color: #fff;
    }
    .pageTab + .layout-content {
      top:32px;
      padding-top: 4px;
    }
  }
}