/* 底部分页组件 */
.ivu-page.mini {
  text-align: center;
  background-color: #daeefe;
  padding: 2px;
  border: 1px solid #9ecef5;
  border-top: 0 none;
  .ivu-page-next,
  .ivu-page-prev,
  .ivu-page-item {
    border: 1px solid #dddee1;
    height: auto;
    line-height: normal;
    padding: 1px 0;
    font-size: 12px;
  }
  .ivu-page-item-active {
    background-color: #2d8cf0;
    border-color: #2d8cf0;
    a{
      color: #fff;
    }
  }
  .ivu-page-total {
    float: right;
  }
  .ivu-page-options-elevator input{
    height: auto;
    line-height: normal;
    text-align: center;
  }
  .ivu-select-single .ivu-select-selection{
    height: auto;
    .ivu-select-placeholder,
    .ivu-select-selected-value {
      height: auto;
      line-height: normal;
      padding-left: 10px;
      padding-right: 30px;
    }
    .ivu-select-selected-value {
      padding: 1px 26px 1px 10px;
    }
  }
}

/* 表格 */
.ivu-table-wrapper {
  height: 100%;
  border-color: #9ecef5;
  .ivu-table:before,
  .ivu-table:after{
    background-color: #9ecef5;
  }
  .ivu-table-column-center {
    .ivu-table-cell {
      padding: 0;
      .ivu-checkbox-wrapper {
        margin-right: 0;
      }
    }
  }
}
.ivu-table-stripe .ivu-table-body tr:nth-child(2n) td,
.ivu-table-stripe .ivu-table-fixed-body tr:nth-child(2n) td {
  background-color: #f5fbff;
}
.ivu-table{
  color: #333;
  td, th{
    height: 30px;
  }
  th{
    background-color: #daeefe;
    border-color: #9ecef5;
  }
}
.ivu-table-cell{
  padding: 2px 10px;
}
.tableBtn{
  cursor: pointer;
  display: inline-block;
  font-size: 16px;
  vertical-align: middle;
  line-height: 18px;
  & + .tableBtn{
    margin-left: 8px;
  }
  &.info{
    color: #2db7f5;
  }
  &.success{
    color: #19be6b;
  }
  &.warning{
    color: #f90;
  }
  &.error{
    color: #ed3f14;
  }
  &.info:hover{
    color: #57c5f7;
  }
  &.success:hover{
    color: #47cb89;
  }
  &.warning:hover{
    color: #ffad33;
  }
  &.error:hover{
    color: #f16543;
  }
}
.ivu-spin-fix{
  background-color: rgba(45, 140, 240,0.2);
}

/* 按钮里的图标 */
.ivu-btn{
  padding: 0px 7px 3px;
  border-radius: 3px;
  .ivu-icon{
    font-size: 14px;
    font-weight: bold;
  }
  span{
    vertical-align: middle;
    line-height: 13px;
    height: 14px;
    display: inline-block;
  }
  &.ivu-btn-ghost{
    border-color: #fff;
    &:hover{
      box-shadow: 0 0 4px #fff;
    }
    &.ivu-btn-success:hover{
      border-color: #19be6b;
      box-shadow: 0 0 4px #19be6b;
    }
    &.ivu-btn-warning:hover{
      border-color: #f90;
      box-shadow: 0 0 4px #f90;
    }
    &.ivu-btn-error:hover{
      border-color: #ed4014;
      box-shadow: 0 0 4px #ed4014;
    }
    &.ivu-btn-info:hover{
      border-color: #2db7f5;
      box-shadow: 0 0 4px #2db7f5;
    }
  }
}
.ivu-btn + .ivu-btn {
  margin-left: 4px;
}
.ivu-transfer .ivu-btn + .ivu-btn {
  margin-left: 0;
}

/* tab */
.ivu-tabs{
  height: 100%;
  color: #666;
  .ivu-tabs-bar{
    margin-bottom: 0;
    .ivu-tabs-nav{
      padding-left: 6px;
      .ivu-tabs-tab{
        user-select: none;
        background-color: #eee;
        &:hover{
          //color: #333;
          border-color: #ccc;
          box-shadow: 1px 1px 1px rgba(0,0,0,0.1);
          background-color: #f6f6f6;
        }
        &.ivu-tabs-tab-active{
          background-color: #fff;
        }
      }
    }
  }
  .ivu-tabs-tabpane{
    padding: 4px;
  }
  &.tabPage{
    .ivu-tabs-content-animated{
      position: absolute;
      top: 36px;
      left: 0px;
      right: 0px;
      bottom: 0px;
      margin: auto;
    }
  }
  .ivu-table-cell{
    .ivu-btn{
      padding: 1px 6px;
    }
  }
}

/* 卡片组件 */
.ivu-card-body{
  padding: 6px;
}
.leftCol,.rightCol{
  .ivu-card-body{
    height: 100%;
  }
}
.ivu-card.treeBox .ivu-card-body{
  padding: 0;
  .layout-page-content{
    height: 100%;
    overflow: auto;
  }
}

/* tree */
.ivu-tree{
  padding: 0 4px;
}
.ivu-tree-children{
  li:hover > span > .ivu-tree-arrow,
  li:hover > span > .tree-lineBox:before,
  li:hover > span > .tree-lineBox:after{
    border-color: #666 !important;
  }
  li{
    position: relative;
    .ivu-btn{
      padding: 0 4px;
    }
    .tree-lineBox{
      cursor: pointer;
    }
    .tree-lineBox:after{
      content: "";
      position: absolute;
      top: 18px;
      left: 7px;
      bottom: 10px;
      margin: auto;
      display: block;
      width: 1px;
      border-right: 1px dashed #ccc;
      z-index: 0;
    }
    .ivu-tree-arrow-open + span > .tree-lineBox.parent:before{
      content: "";
      position: absolute;
      left: 6px;
      bottom: 8px;
      margin: auto;
      display: block;
      width: 18px;
      height: 1px;
      border-bottom: 1px dashed #ccc;
      z-index: 0;
    }
    .tree-lineBox:not(.first) span{
      position: relative;
    }
    .tree-lineBox:not(.first) span:before{
      //content: "";
      position: absolute;
      left: -27px;
      top: 8px;
      margin: auto;
      display: block;
      width: 14px;
      height: 1px;
      border-bottom: 1px dashed #ccc;
      z-index: 0;
    }
    .tree-lineBox.selected{
      background-color: #f90;
      color: #fff;
      border-radius: 3px;
      padding: 2px 6px;
    }
    .tree-lineBox.selected:before,
    .tree-lineBox.selected:after{
      border-color: #f90 !important;
    }
    .tree-lineBox.selected:hover{
      background-color: #ffad33;
    }
    .tree-lineBox.selected:hover:before,
    .tree-lineBox.selected:hover:after{
      border-color: #ffad33 !important;
    }
  }
}

/* 弹窗 */
.popupLoading .ivu-modal-body{
  position: relative;
  &:after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.2);
    z-index: 10;
  }
}
.ivu-modal-content {
  border-radius: 3px;
  border: 1px solid rgba(45, 140, 240, 0.3);
  // .ivu-modal-body{
  //   max-height: 400px;
  //   overflow: auto;
  // }
  .ivu-modal-footer {
    border-radius: 0 0 3px 3px;
    background-color: #eff3f8;
    padding: 10px;
  }
}
.hideOk,
.ivu-modal-wrap.hideOk {
  .ivu-modal-content {
    .ivu-btn-success {
      display: none;
    }
    .ivu-modal-footer {
      button + button {
        margin: 0;
      }
    }
  }
}
.hideEsc,
.ivu-modal-wrap.hideEsc {
  .ivu-modal-content {
    .ivu-btn-error {
      display: none;
    }
    .ivu-modal-footer {
      button + button {
        margin: 0;
      }
    }
  }
}
.ivu-modal-wrap {
  .ivu-modal-header i {
    font-weight: bold;
    font-size: 16px;
  }
  &.delete .ivu-modal-content{
    border: 0 none;
  }
}
.ivu-modal-wrap.green {
  .ivu-modal-header * {
    color: #19be6b;
  }
}
.ivu-modal-wrap.blue {
  .ivu-modal-header * {
    color: #2db7f5;
  }
}
.ivu-modal-wrap.yellow {
  .ivu-modal-header * {
    color: #f90;
  }
}
.ivu-modal-wrap.red {
  .ivu-modal-header * {
    color: #ed3f14;
  }
}
.ivu-modal-footer{
  .ivu-btn{
    padding: 3px 7px 2px;
  }
}

/* 下拉悬浮框 */
.ivu-select-dropdown{
  z-index: 4;
}

/* select */
.ivu-select .ivu-select-dropdown{
  max-height: 200px;
  overflow: auto;
}

/* disabled 的 input */
.ivu-input[disabled],
fieldset[disabled] .ivu-input{
  color: #333;
}

/* 日期组件 */
.ivu-date-picker{
  display: block;
}

/* 下拉菜单，这个样式主要是搜索弹窗 */
.ivu-select-dropdown .searchBox{
  width: 600px;
  padding: 6px 12px;
}
